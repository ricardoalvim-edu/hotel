<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="hotelPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>org.sistemahotel.Model.Telefone</class>
    <class>org.sistemahotel.Model.Funcionario</class>
    <class>org.sistemahotel.Model.CategoriaAcomodacao</class>
    <class>org.sistemahotel.Model.CategoriaProduto</class>
    <class>org.sistemahotel.Model.Acomodacao</class>
    <class>org.sistemahotel.Model.Endereco</class>
    <class>org.sistemahotel.Model.Fatura</class>
    <class>org.sistemahotel.Model.ConsumoHospede</class>
    <class>org.sistemahotel.Model.Acompanhante</class>
    <class>org.sistemahotel.Model.Produto</class>
    <class>org.sistemahotel.Model.Hospede</class>
    <class>org.sistemahotel.Model.CadastroSaida</class>
    <class>org.sistemahotel.Model.CadastroEntrada</class>
    <class>org.sistemahotel.Model.Reserva</class>
    <class>org.sistemahotel.Model.TipoPagamento</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/hotel"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
